---
import { tv } from "tailwind-variants";

export interface Props {
  tag: string;
  variant?: "default" | "outline";
  size?: "sm" | "md";
}

const tagStyles = tv({
  base: "inline-block rounded-md font-medium leading-none whitespace-nowrap transition-all duration-200 ease-out",
  variants: {
    variant: {
      default: "",
      outline: "border backdrop-blur-sm shadow-sm [text-shadow:0_1px_2px_rgba(0,0,0,0.6)] ",
    },
    size: {
      sm: "px-3 py-1.5 text-xs",
      md: "px-4 py-2 text-sm",
    },
  },
  defaultVariants: {
    variant: "default",
    size: "sm",
  },
});

const { tag, variant = "default", size = "sm" } = Astro.props;
---

<span class={tagStyles({ variant, size })}>
  {tag}
</span>
