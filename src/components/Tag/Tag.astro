---
import { tv } from "tailwind-variants";

export interface Props {
  tag: string;
  variant?: "default" | "outline";
  size?: "sm" | "md";
}

const tagStyles = tv({
  base: "inline-block rounded-md font-medium leading-none whitespace-nowrap transition-all duration-200 ease-out",
  variants: {
    variant: {
      default:
        "bg-slate-900/8 dark:bg-slate-100/8 text-slate-900 dark:text-slate-100 hover:bg-slate-900/12 dark:hover:bg-slate-100/12",
      outline:
        "border border-white/60 bg-white/15 text-white backdrop-blur-sm shadow-sm [text-shadow:0_1px_2px_rgba(0,0,0,0.6)] hover:bg-white/25 hover:border-white/80 [.blog-card_&]:border-white/60 [.blog-card_&]:bg-white/15 [.blog-card_&]:text-white [.blog-card_&]:backdrop-blur-sm [.blog-card_&:hover]:bg-white/25 [.blog-card_&:hover]:border-white/80 [:not(.blog-card)_&]:border-slate-900/20 [:not(.blog-card)_&]:dark:border-slate-100/20 [:not(.blog-card)_&]:bg-transparent [:not(.blog-card)_&]:text-slate-900 [:not(.blog-card)_&]:dark:text-slate-100 [:not(.blog-card)_&]:backdrop-blur-none [:not(.blog-card)_&:hover]:bg-slate-900/6 [:not(.blog-card)_&:hover]:dark:bg-slate-100/6 [:not(.blog-card)_&:hover]:border-slate-900/30 [:not(.blog-card)_&:hover]:dark:border-slate-100/30",
    },
    size: {
      sm: "px-3 py-1.5 text-xs",
      md: "px-4 py-2 text-sm",
    },
  },
  defaultVariants: {
    variant: "default",
    size: "sm",
  },
});

const { tag, variant = "default", size = "sm" } = Astro.props;
---

<span class={tagStyles({ variant, size })}>
  {tag}
</span>
