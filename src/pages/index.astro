---
import BaseLayout from "../components/BaseLayout/BaseLayout.astro";
---

<BaseLayout>
  <div class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">otetotetoのひとりごと</h1>
      <p class="hero-description">
        気が向いたときに<br />
        あることないこと吐き出す場です
      </p>
    </div>
  </div>

  <div class="links-section">
    <div class="links-grid">
      <a href="/blog" class="link-card">
        <div class="link-icon">📝</div>
        <h3 class="link-title">ブログ</h3>
        <p class="link-description">そんときの気分で書いたもの</p>
      </a>
      <a href="/photo" class="link-card">
        <div class="link-icon">📷</div>
        <h3 class="link-title">フォト</h3>
        <p class="link-description">撮ったら載せるかも</p>
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .hero-section {
    padding-block: 6rem;
    text-align: center;
  }

  .hero-content {
    display: grid;
    gap: 1.5rem;
    max-width: 35rem;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    color: var(--text-color);

    @media (width <= 768px) {
      font-size: 2rem;
    }

    @media (width <= 480px) {
      font-size: 1.75rem;
    }
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: color-mix(in srgb, var(--text-color) 75%, transparent);
    margin: 0;

    @media (width <= 768px) {
      font-size: 1rem;
    }
  }

  .links-section {
    padding-block: 2rem;
  }

  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(16rem, 1fr));
    gap: 1.5rem;
    max-width: 36rem;
    margin: 0 auto;
  }

  .link-card {
    display: block;
    text-decoration: none;
    color: inherit;
    text-align: center;
    padding: 2rem 1.5rem;
    background: color-mix(in srgb, var(--text-color) 2%, transparent);
    border-radius: 1rem;
    border: 1px solid color-mix(in srgb, var(--text-color) 6%, transparent);
    transition: all 0.3s ease;

    &:hover {
      background: color-mix(in srgb, var(--text-color) 4%, transparent);
      border-color: color-mix(in srgb, var(--text-color) 12%, transparent);
      transform: translateY(-0.125rem);
    }
  }

  .link-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .link-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: var(--text-color);
  }

  .link-description {
    color: color-mix(in srgb, var(--text-color) 65%, transparent);
    margin: 0;
    line-height: 1.5;
    font-size: 0.9rem;
  }
</style>
